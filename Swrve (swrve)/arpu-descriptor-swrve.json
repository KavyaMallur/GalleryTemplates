{
	"name" : "Swrve Revenue",
	"description": "Show daily revenue, average revenue per user and average revenue per paying user. Originates from the Gallery.",

	"datasources" : {
		"swrve-01" : {
			"service": "swrve",
			"type": "simple_rest",
			"format": "json",
			"name": "Swrve Daily Average Revenue per Paying User",
			"libraryAlias": "SwrveDailyARPPU",
			"refreshInterval": 14400,
			"description": "See your app's daily average revenue per paying user. Originates from the Gallery.",
			"props": {
				"endpoint_url": "https://{{ds.swrve.dataCenter}}.swrve.com/api/1/exporter/kpi/arppu_daily.json?api_key={{auth.swrve.apiKey}}&personal_key={{auth.swrve.personalKey}}&start={date.add(-30).format()}&granularity=day",
				"method": "GET"
			}
		},
		"swrve-02" : {
			"service": "swrve",
			"type": "simple_rest",
			"format": "json",
			"name": "Swrve Daily Average Revenue per User",
			"libraryAlias": "SwrveDailyARPU",
			"refreshInterval": 14400,
			"description": "See your app's daily average revenue per user. Originates from the Gallery.",
			"props": {
				"endpoint_url": "https://{{ds.swrve.dataCenter}}.swrve.com/api/1/exporter/kpi/arpu_daily.json?api_key={{auth.swrve.apiKey}}&personal_key={{auth.swrve.personalKey}}&start={date.add(-30).format()}&granularity=day",
				"method": "GET"
			}
		}
	},

	"dsMappings": {
		"swrve-01": "4ae4df24926a03f7cda4natceewzhere",
		"swrve-02": "f1e56f704bb784cd7766natceewzhere"
	},
	"services" : [
		{
			"service" : "swrve"
		}
	],
	"datasourceConfigModel" : [
		{
			"type" : "select",
			"id" : "ds.swrve.dataCenter",
			"label" : "Data Center",
			"description" : "Select the data center.",
			"options": [
                {"value":"dashboard","label":"US"},
                {"value":"eu-dashboard","label":"EU"}
            ],
            "isRequired" : true,
            "selectedValue": "metric"
		}
	]

