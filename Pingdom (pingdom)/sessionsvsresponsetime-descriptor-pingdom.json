                "type": "simple_rest",
                "format": "json",
                "props": {
                    "endpoint_url": "https://api.pingdom.com/api/2.0/checks",
                    "method": "GET",
                    "auth_method": "basic",
                    "parameters": "[{\"name\":\"App-Key\",\"value\":\"inab7669wia1jffg80gn28fkczmc9r2y\",\"type\":\"header\"}]"
