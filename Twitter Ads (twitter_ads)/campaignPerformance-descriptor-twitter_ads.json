{
    "name": "Twitter Ads Campaign Performance (Last 7 Days)",
    "description": "See how your campaign is performing during the last 7 days in  comparison to the previous 7 days.<br>Originates from the Gallery.",
    "datasources": {
        "twitter_ads-01": {
            "service": "twitter_ads",
            "libraryAlias": "TwitterAdsCampiagns",
            "name": "Twitter Ads Campaigns",
            "description": "Retrieve your Twitter Ads campaigns information. Originates from the Gallery.",
            "type": "simple_rest",
            "format": "json",
            "refreshInterval": 14400,
            "props": {
                "endpoint_url": "https://ads-api.twitter.com/1/accounts/{{ds.twitter_ads.accountId}}/campaigns",
                "method": "get"
            }
        },
        "twitter_ads-02": {
            "service": "twitter_ads",
            "libraryAlias": "TwitterAdsCampaignAnalyticsLast7Days",
            "name": "Twitter Ads Campaign Analytics (Last 7 Days)",
            "description": "Retrieve engagement and conversion metrics from your Twitter Ads campaign for the last 7 days. Originates from the Gallery.",
            "type": "simple_rest",
            "format": "json",
            "refreshInterval": 14400,
            "props": {
                "endpoint_url": "https://ads-api.twitter.com/1/stats/accounts/{{ds.twitter_ads.accountId}}?entity_ids={{ds.twitter_ads.campaignId}}&entity=CAMPAIGN&start_time=2016-03-02&end_time=2016-03-09&granularity=DAY&metric_groups=ENGAGEMENT,BILLING,WEB_CONVERSION&placement=ALL_ON_TWITTER",
                "method": "get"
            }
        },
        "twitter_ads-03": {
            "service": "twitter_ads",
            "libraryAlias": "TwitterAdsCampaignAnalyticsPrev7Days",
            "name": "Twitter Ads Campaign Analytics (Prev 7 Days)",
            "description": "Retrieve engagement and conversion metrics from your Twitter Ads campaign for the previous 7 days. Originates from the Gallery.",
            "type": "simple_rest",
            "format": "json",
            "refreshInterval": 14400,
            "props": {
                "endpoint_url": "https://ads-api.twitter.com/1/stats/accounts/{{ds.twitter_ads.accountId}}?entity_ids={{ds.twitter_ads.campaignId}}&entity=CAMPAIGN&start_time=2016-02-27&end_time=2016-03-05&granularity=DAY&metric_groups=ENGAGEMENT,BILLING,WEB_CONVERSION&placement=ALL_ON_TWITTER",
                "method": "get"
            }
        }
    },

    "dsMappings": {
        "twitter_ads-01": "4ef4d6e659ce67b6e0b6doogeraspilk",
        "twitter_ads-02": "f696e1c849fc167b448ddoogeraspilk",
        "twitter_ads-03": "13dc372e73798099573cdoogeraspilk"
    },

    "services": [{
        "service": "twitter_ads"
    }],

    "datasourceConfigModel": [{
        "type": "select",
        "id": "ds.twitter_ads.accountId",
        "label": "Twitter Ads Account",
        "description": "Select a Twitter Ads account and campaign from the drop-down lists.",
        "isRequired": true,
        "onChangeQueries": ["q2"]
    }, {
        "type": "select",
        "id": "ds.twitter_ads.campaignId",
        "label": "Twitter Ads Campaign",
        "isRequired": true
    }],
    "queries": [{
        "errorMessage": "Here are two suggestions:<br><br>1. Make sure you have access to Twitter Ads account(s). <br><br>2. From time to time, your Twitter OAuth token will expire. This token allows you to safely bring your data into Klipfolio. <a href='https://support.klipfolio.com/hc/en-us/articles/215548958-OAuth-token-expired-for-connected-accounts' target='_blank'>Find out how to re-authorize your OAuth tokens</a>.",
        "connector": {
            "service": "twitter_ads",
            "type": "simple_rest",
            "format": "json",
            "props": {
                "endpoint_url": "https://ads-api.twitter.com/1/accounts",
                "method": "GET"
            }
        },
        "results": [{
            "propId": "ds.twitter_ads.accountId",
            "propField": "options",
            "labels": "/data/name",
            "values": "/data/id"
        }]
    }, {
        "id": "q2",
        "connector": {
            "service": "twitter_ads",
            "type": "simple_rest",
            "format": "json",
            "props": {
                "endpoint_url": "https://ads-api.twitter.com/1/accounts/{{ds.twitter_ads.accountId}}/campaigns",
                "method": "GET"
            }
        },
        "results": [{
            "propId": "ds.twitter_ads.campaignId",
            "propField": "options",
            "labels": "/data/name",
            "values": "/data/id"
        }]
    }]
}
