{
  "connector": {
    "type": "simple_rest",
    "format":"json",
    "refresh_interval":14400,
    "props": {
        "auth_method": "basic",
        "basic_auth_username": "<yourUsername>",
        "basic_auth_password": "<yourPassword>",
        "endpoint_url": "https://<yourSubdomain>.zendesk.com/api/v2/search.json?sort_by=created_at&sort_order=asc&query=type:ticket",
        "method": "get"
    }
  }
}

