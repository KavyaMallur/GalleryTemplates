                "endpoint_url": "https://graph.facebook.com/v2.5/{{ds.facebook.pageId}}/insights/page_impressions_unique/day?since={date.add(-90).format()}&until={date.today}",
                "graphUrl": "https://graph.facebook.com/v2.5/{{ds.facebook.pageId}}/insights/page_impressions_unique/day?since={date.add(-90).format()}&until={date.today}",
                "qtype": "Graph API"
