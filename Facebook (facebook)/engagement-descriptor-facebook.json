{
	"name" : "Facebook Engagement",
	"description" : "Monitor the number of people who engaged with your page. Originates from the Gallery.",
	

	"datasources" : {
		"facebook" : {
			"service" : "facebook",
			"libraryAlias" : "facebookEngagement",
			"name": "Facebook Engagement",
			"description" : "Monitor the number of people who engaged with your page. Engagement includes any click or story created (Unique Users). Originates from the Gallery.",
			"type" : "facebook",
			"format" : "json",
			"refreshInterval" : 14400,
			"props" : {
				"endpoint_url": "https://graph.facebook.com/v2.5/{{ds.facebook.pageId}}/insights/page_engaged_users,page_impressions?since={date.last30Days}&until={date.today}",
            	"graphUrl": "https://graph.facebook.com/v2.5/{{ds.facebook.pageId}}/insights/page_engaged_users,page_impressions?since={date.last30Days}&until={date.today}",
            	"qtype": "Graph API"
			}
		}
	},

	"dsMappings" : {
		"facebook" : "1e8d974836bdaab9d5d8niktawuzhere"	
	},

	"services" : [
		{
			"service" : "facebook"
		}
	],

	"datasourceConfigModel" : [
        {
            "type" : "select",
            "id" : "ds.facebook.pageId",
            "label" : "Facebook Page",
            "description":"Select your company Facebook page from the drop-down list."
        }
    ],
    "queries": [
        {
            "errorMessage":"From time to time, your Facebook OAuth token will expire. This token allows you to safely bring your data into Klipfolio. <a href='https://support.klipfolio.com/hc/en-us/articles/215548958-OAuth-token-expired-for-connected-accounts' target='_blank'>Find out how to re-authorize your OAuth tokens</a>.",
            "connector": {
                "service": "facebook",
                "type": "facebook",
                "format": "json",
                "props": {
                    "endpoint_url": "https://graph.facebook.com/v2.5/me/accounts?fields=name,id",
                    "method": "GET",
                    "qtype": "Graph API"
                }
            },
            "results": [
                {
                    "propId" : "ds.facebook.pageId",
                    "propField" : "options",
                    "labels": "/data/name",
                    "values": "/data/id"
                }
            ]
        }   
    ]
}