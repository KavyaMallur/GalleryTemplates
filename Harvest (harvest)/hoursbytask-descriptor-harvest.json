    "datasources": {
        "harvest-01": {
            "service": "harvest",
            "type": "simple_rest",
            "format": "json",
            "name": "Harvest Projects",
            "libraryAlias": "HarvestProjects",
            "refreshInterval": 14400,
            "description": "Retrieve the projects in your Harvest account. Originates from the Gallery.",
            "props": {
                "auth_method": "basic",
                "basic_auth_username": "{{auth.harvest.userName}}",
                "basic_auth_password": "{{auth.harvest.password}}",
                "endpoint_url": "https://{{auth.harvest.subDomain}}.harvestapp.com/projects.json",
                "method": "get"
            }
        },
        "harvest-02": {
            "service": "harvest",
            "type": "simple_rest",
            "format": "json",
            "name": "Harvest Tasks",
            "libraryAlias": "HarvestTasks",
            "refreshInterval": 14400,
            "description": "Retrieve the tasks in your harvest account. Originates from the Gallery.",
            "props": {
                "auth_method": "basic",
                "basic_auth_username": "{{auth.harvest.userName}}",
                "basic_auth_password": "{{auth.harvest.password}}",
                "endpoint_url": "https://{{auth.harvest.subDomain}}.harvestapp.com/tasks.json",
                "method": "get",
                "parameters": "[]"
            }
        },
        "harvest-03": {
            "service": "harvest",
            "type": "simple_rest",
            "format": "json",
            "name": "Harvest Billable Hours for Project (Last 7 Days)",
            "libraryAlias": "HarvestBillableHoursforProjectLast7Days",
            "refreshInterval": 14400,
            "description": "Retrieve the daily billable entries to your Harvest project. Originates from the Gallery.",
            "props": {
                "auth_method": "basic",
                "basic_auth_username": "{{auth.harvest.userName}}",
                "basic_auth_password": "{{auth.harvest.password}}",
                "endpoint_url": "https://{{auth.harvest.subDomain}}.harvestapp.com/projects/{{ds.harvest.projectId}}/entries.json?from={date.add(-7).format()}&to={date.yesterday}&billable=yes",
                "method": "get"
            }
        }
    },

    "dsMappings": {
        "harvest-01": "6f1451f8fb69e3cc884adoogeraspilk",
