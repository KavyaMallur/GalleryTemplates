{
    "name" : "comScore Referrer Drilldown",
    "description" : "Show groups of referrer entry type of unique browser count, with Drilldown functionality. Originates from the Gallery.",

    "datasources" : {
        "comscore" : {
            "service" : "comscore",
            "type" : "comscore",
            "format" : "csv",
            "name" :"comScore Browsers per Entry Type",
            "libraryAlias" :"comScoreBrowsersperEntryType",
            "refreshInterval" : 14400,
            "description" :"Retreive the count of unique browser per entry type for different sites. Originates from the Gallery.",
            "props":{
                "endpoint_url": "https://dax-rest.comscore.com/v1/reportitems.csv?itemid=260&client={{ds.comscore.client}}&user={{ds.comscore.username}}&password={{ds.comscore.password}}&site={{ds.comscore.site}}&startdate={date.add(-30).format('yyyyMMdd')}&enddate={date.today.format('yyyyMMdd')}&eventfilterid=3&visitfilterid=2"
            }
        }
    },

    "dsMappings": {
        "comscore" : "40082bbbcf97fba73eb2doogeraspilk"
    },

    "services" : [
        {
            "service" : "comscore"
        }
    ],

    "datasourceConfigModel" : [
        {
            "type" : "text",
            "id" : "ds.comscore.client",
            "label" : "Client",
            "description":"Authenticate with comScore. Need help? See <a href=# target='_blank'>Klip Gallery: comScore</a>."
        },
         {
            "type" : "text",
            "id" : "ds.comscore.username",
            "label" : "Username"
        },
         {
            "type" : "text",
            "id" : "ds.comscore.password",
            "label" : "Password"
        },
        {
            "type": "select",
            "id": "ds.comscore.location",
            "label": "Data Center",
            "options": [ 
                    {"value":".com","label":"United States"},
                    {"value":".eu","label":"Europe"}
                ],
            "isRequired" : "true",
            "selectedValue": ".com" 
        },
        {
            "type": "text",
            "id": "ds.comscore.site",
            "label": "Site",
            "isRequired" : "true"
        }
    ]
}