            "description":"Enter your comScore DAX Client Name and Site details. Need help? See <a href=# target='_blank'>Klip Gallery: comScore</a>."
        },
        {
            "type": "select",
            "id": "ds.comscore.location",
            "label": "Data Center",
            "options": [ 
                    {"value":".com","label":"United States"},
                    {"value":".eu","label":"Europe"}
                ],
            "isRequired" : "true",
            "selectedValue": ".com" 
        },
        {
            "type": "text",
            "id": "ds.comscore.site",
            "label": "Site",
            "isRequired" : "true"
        }
    ]
