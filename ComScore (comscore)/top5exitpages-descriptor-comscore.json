{
    "name" : "comScore Top 5 Exit Pages",
    "description" : "Show the top 5 exit pages within the last 60 days with percentage. Originates from the Gallery.",

    "datasources" : {
        "comscore" : {
            "service" : "comscore",
            "type" : "comscore",
            "format" : "csv",
            "name" :"comScore Exit Pages",
            "libraryAlias" :"comScoreExitPages",
            "refreshInterval" : 14400,
            "description" :"Retrieve the list of exit pages for the last 60 days. Originates from the Gallery.",
            "props":{
                "endpoint_url": "https://dax-rest.comscore.com/v1/reportitems.csv?itemid=17&client={{ds.comscore.client}}&user={{ds.comscore.username}}&password={{ds.comscore.password}}&site={{ds.comscore.site}}&startdate={date.add(-60).format('yyyyMMdd')}&enddate={date.today.format('yyyyMMdd')}&eventfilterid=3&visitfilterid=2"
            }
        }
    },

    "dsMappings": {
        "comscore" : "a42aeedac4d8d031e79adoogeraspilk"
    },

    "services" : [
        {
            "service" : "comscore"
        }
    ],

    "datasourceConfigModel" : [
        {
            "type" : "text",
            "id" : "ds.comscore.client",
            "label" : "Client",
            "description":"Authenticate with comScore. Need help? See <a href=# target='_blank'>Klip Gallery: comScore</a>."
        },
         {
            "type" : "text",
            "id" : "ds.comscore.username",
            "label" : "Username"
        },
         {
            "type" : "text",
            "id" : "ds.comscore.password",
            "label" : "Password"
        },
        {
            "type": "select",
            "id": "ds.comscore.location",
            "label": "Data Center",
            "options": [ 
                    {"value":".com","label":"United States"},
                    {"value":".eu","label":"Europe"}
                ],
            "isRequired" : "true",
            "selectedValue": ".com" 
        },
        {
            "type": "text",
            "id": "ds.comscore.site",
            "label": "Site",
            "isRequired" : "true"
        }
    ]
}