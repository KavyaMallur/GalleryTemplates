{
    "name" : "Facebook Ads CPM & CPP (Last 7 Days)",
    "description" : "Compare cost per impressions and cost per 1000 people reached over the past 7 days. Originates from the Gallery.",
    

    "datasources" : {
        "facebookAds-01" : {
            "service" : "facebook_ads",
            "libraryAlias" : "FacebookAdsDailyStats",
            "name": "Facebook Ads Daily Stats",
            "description" : "The daily stats of your Facebook Ads (Last 7 Days). Originates from the Gallery.",
            "type" : "facebook",
            "format" : "json",
            "refreshInterval" : 14400,
            "props" : {
                "endpoint_url": "https://graph.facebook.com/v2.4/{{ds.facebook_ads.accountID}}/insights?fields=account_id,cpm,cpp,spend,impressions,reach,clicks&date_preset=last_7_days&data_columns=account_id,cpm,cpp,spend,impressions,reach,clicks&time_increment=1",
                "graphUrl": "https://graph.facebook.com/v2.4/{{ds.facebook_ads.accountID}}/insights?fields=account_id,cpm,cpp,spend,impressions,reach,clicks&date_preset=last_7_days&data_columns=account_id,cpm,cpp,spend,impressions,reach,clicks&time_increment=1",
                "qtype": "Graph API"
            }
        }
    },

    "dsMappings" : {
        "facebookAds-01" : "c72b0ebaeb77f4d613fbnatceewzhere" 
    },

    "services" : [
        {
            "service" : "facebook_ads"
        }
    ],

    "datasourceConfigModel" : [
        {
            "type" : "select",
            "id" : "ds.facebook_ads.accountID",
            "label" : "Account Name",
            "description":"Select a Facebook Ads Account Name from the list below."
        }
    ],
"queries": [
        {
            "errorMessage":"Here are two suggestions:<br><br>1. Make sure the Facebook account you signed in with includes a Facebook Ads account. <br><br>2. From time to time, your Facebook OAuth token will expire. This token allows you to safely bring your data into Klipfolio. <a href='http://klipfolio.uservoice.com/knowledgebase/articles/404228-oauth-token-expired' target='_blank'>Find out how to re-authorize your OAuth tokens</a>.",
            "connector": {
                "service": "facebook_ads",
                "type": "facebook",
                "format": "json",
                "props": {
                    "endpoint_url": "https://graph.facebook.com/v2.4/me/adaccounts?fields=name,id",
                    "graphUrl": "https://graph.facebook.com/v2.4/me/adaccounts?fields=name,id",
                    "method": "GET",
                    "qtype": "Graph API"
                }
            },
            "results": [
                {
                    "propId" : "ds.facebook_ads.accountID", 
                    "propField" : "options", 
                    "labels": "/data/name",  
                    "values": "/data/id" 
                }
            ]
        }
    ]
}