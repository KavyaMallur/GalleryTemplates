            "props" : {
                "endpoint_url": "https://graph.facebook.com/v2.5/{{ds.facebook_ads.accountID}}/insights?level=ad&fields=ad_name,adset_name,campaign_name,spend,unique_clicks,cost_per_unique_click,cpm,ctr&sort=spend_descending&date_preset=today",
                "graphUrl": "https://graph.facebook.com/v2.5/{{ds.facebook_ads.accountID}}/insights?level=ad&fields=ad_name,adset_name,campaign_name,spend,unique_clicks,cost_per_unique_click,cpm,ctr&sort=spend_descending&date_preset=today",
                "qtype": "Graph API"
            }
        }
    },

    "dsMappings" : {
        "facebookAds" : "f22a33c1ae565aa3e908natceewzhere" 
    },

    "services" : [
        {
            "service" : "facebook_ads"
        }
    ],
    "uiVariables": [
        {
            "name":"KTAdsObjective", 
            "value":"All" 
        }
    ],
