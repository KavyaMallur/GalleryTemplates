    "dsMappings" : {
        "facebookAds-01" : "f22a33c1ae565aa3e908natceewzhere" 
    },

    "services" : [
        {
            "service" : "facebook_ads"
        }
    ],
    "uiVariables": [
        {
            "name":"KTAdsObjective", 
            "value":"All" 
        }
    ],
    "datasourceConfigModel" : [
        {
            "type" : "select",
            "id" : "ds.facebook_ads.accountID",
