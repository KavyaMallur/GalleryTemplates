{
    "name" : "Mixpanel Funnel (Last 30 Days)",
    "description" : "Track the 30 days conversion rate between event stages of a Mixpanel funnel. Originates from the Gallery.",


    "datasources" : {
        "mixpanel" : {
            "service" : "mixpanel",
            "libraryAlias" : "MixpanelFunnel",
            "name": "Mixpanel Funnel ({{ds.mixpanel.funnelId}})",
            "description" : "Track your conversion rate between Mixpanel funnel stages, and compare it to your average completion rate. Originates from the Gallery.",
            "type" : "simple_rest",
            "format" : "json",
            "refreshInterval" : 14400,
            "props" : {
                "endpoint_url": "http://mixpanel.com/api/2.0/funnels/?expire={hash.getExpiryTime(240)}&funnel_id={{ds.mixpanel.funnelId}}&from_date={date.add(-29).format()}&to_date={date.today}&sig={hash.append(\"api_key={{auth.mixpanel.apiKey}}\").append(\"expire=\").append(hash.getExpiryTime(240)).append(\"from_date=\").append(date.add(-29).format()).append(\"funnel_id={{ds.mixpanel.funnelId}}\").append(\"interval=30\").append(\"to_date=\").append(date.today.format()).append(\"{{auth.mixpanel.apiSecret}}\").encodeMd5().toHex().printDigest()}&interval=30&api_key={{auth.mixpanel.apiKey}}"
            }
        }
    },

    "dsMappings" : {
        "mixpanel" : "0f5c3f0214cfd2b16c90doogeraspilk"
    },

    "services" : [
        {
            "service" : "mixpanel"
        }
    ],
    "datasourceConfigModel" : [
        {
            "type" : "select",
            "id" : "ds.mixpanel.funnelId",
            "label" : "Funnel",
            "description":"Select a funnel that you would like to monitor."
        }
    ],
    "queries": [
        {
            "errorMessage":"Make sure you have the correct Mixpanel API Key and API Secret.",
            "connector": {
                "service": "mixpanel",
                "type": "simple_rest",
                "format": "json",
                "props": {
                    "endpoint_url": "http://mixpanel.com/api/2.0/funnels/list/?expire={hash.getExpiryTime(240)}&sig={hash.append(\"api_key={{auth.mixpanel.apiKey}}\").append(\"expire=\").append(hash.getExpiryTime(240)).append(\"{{auth.mixpanel.apiSecret}}\").encodeMd5().toHex().printDigest()}&api_key={{auth.mixpanel.apiKey}}"
                }
            },
            "results": [
                {
                    "propId" : "ds.mixpanel.funnelId",
                    "propField" : "options",
                    "labels": "/name",
                    "values": "/funnel_id"
                }
            ]
        }
    ]
}