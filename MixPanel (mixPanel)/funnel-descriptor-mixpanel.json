{
    "name" : "Mixpanel Funnel",
    "description" : "Track the 30 days conversion rate between event stages of a Mixpanel funnel. Originates from the Gallery.",
    

    "datasources" : {
        "mixpanel" : {
            "service" : "mixpanel",
            "libraryAlias" : "MixpanelFunnel",
            "name": "Mixpanel Funnel ({{ds.mixpanel.funnelId}})",
            "description" : "Provide the 30 days conversion details of events in a Mixpanel funnel. Originates from the Gallery.",
            "type" : "simple_rest",
            "format" : "json",
            "refreshInterval" : 14400,
            "props" : {
                "endpoint_url": "http://mixpanel.com/api/2.0/funnels/?expire={hash.getExpiryTime(240)}&funnel_id={{ds.mixpanel.funnelId}}&sig={hash.append(\"api_key={{auth.mixpanel.apiKey}}\").append(\"expire=\").append(hash.getExpiryTime(240)).append(\"funnel_id={{ds.mixpanel.funnelId}}\").append(\"interval=30\").append(\"{{auth.mixpanel.apiSecret}}\").encodeMd5().toHex().printDigest()}&interval=30&api_key={{auth.mixpanel.apiKey}}"
            }
        }
    },

    "dsMappings" : {
        "mixpanel" : "0f5c3f0214cfd2b16c90doogeraspilk"
    },

    "services" : [
        {
            "service" : "mixpanel"
        }
    ],
    "datasourceConfigModel" : [
        {
            "type" : "text",
            "id" : "ds.mixpanel.funnelId",
            "label" : "Enter Funnel Id",
            "description":"Enter ID of the funnel you want to monitor. ",
            "isRequired" : true
        }
    ]
}