{
	"name" : "Web Sessions by Region",
	"description" : "Track where sessions on your website for the last 30 days are coming from. Originates from the Gallery.",

	"datasources" : {
		"googleAnalytics-01" : {
			"service" : "google_analytics",
			"libraryAlias" : "GASessionsByRegion",
			"name": "GA: Sessions by Region (Last 30 Days)",
			"description" : "Track which countries sessions on your website for the last 30 days are coming from. Originates from the Gallery.",
			"type" : "google_analytics",
			"format" : "csv",
			"refreshInterval" : 14400,
			"props" : {
				 "endpoint_url": "https://www.googleapis.com/analytics/v3/data/ga?ids=ga:{{ds.google_analytics.profileId}}&dimensions=ga:country&metrics=ga:sessions&start-date={date.add(-30).format()}&end-date={date.today}&max-results=10000",
				 "max_pages": "10",
           		 "mode": "Simple",
           		 "profile": "{{ds.google_analytics.profileId}}",
           		  "timePeriod": "&start-date={date.add(-30).format()}&end-date={date.today}"
			}
		},
		"worldRegionIds" : {
			"libraryAlias" : "worldRegionIds",
			"name": "World Region IDs",
			"description" : "A list of region/country IDs and their names. Originates from the Gallery.",
			"type" : "simple_rest",
			"format" : "csv",
			"refreshInterval" : 864000,
			"props" : { 
            	"endpoint_url": "http://static.klipfolio.com/static/klips/saas/quickstart/world_region_ids.csv"
            }
		}
	},

	"dsMappings" : {
		"googleAnalytics-01" :"3fb3b9d24259e9fe5981niktawuzhere",
		"worldRegionIds" :"75a9136c5ac6fdc99755niktawuzhere"
	},

	"services" : [
		{
			"service" : "google_analytics"
		}
	],

	"datasourceConfigModel" : [
		{
			"type" : "select",
			"id" : "ds.google_analytics.profileId",
			"label" : "Profile Id",
			"isRequired" : true
		}
	],
	"queries": [
        {
            "errorMessage":"There are two possible reasons: <br><br>1. Your Google Analytics OAuth token has expired. <a href='http://klipfolio.uservoice.com/knowledgebase/articles/404228-oauth-token-expired' target='_blank'>How do I re-authorize my OAuth token?</a> <br><br>2. You don't have access to a Google Analytics account. Ask an administrator to grant you access.",
            "connector": {
                "service": "google_analytics",
                "type": "simple_rest",
                "format": "json",
                "props": {
                    "endpoint_url": "https://www.googleapis.com/analytics/v3/management/accounts/~all/webproperties/~all/profiles?fields=items(id%2Cname%2Cpermissions%2CwebPropertyId%2CwebsiteUrl)",
                    "method": "GET"
                }
            },
            "results": [
                { 
                    "propId" : "ds.google_analytics.profileId",
                    "propField" : "options", 
                    "labels": "/items/name",  
                    "values": "/items/id" 
                }
            ]
        }
    ]
}