{
	"name" : "Recent Tweets (@{{ds.twitter.screenName}})",
	"description" : "A stream of an account's most recent 20 tweets. Originates from the Gallery.",

	"datasources" : {
		"twitter" : {
			"service" : "twitter",
			"libraryAlias" : "twitter20Recent",
			"name": "Twitter @{{ds.twitter.screenName}}'s Timeline",
			"description" : "The most recent 20 tweets posted by @{{ds.twitter.screenName}}. Originates from the Gallery.",
			"type" : "simple_rest",
			"format" : "json",
			"refreshInterval" : 14400,
			"props" : { 
				"endpoint_url": "https://api.twitter.com/1.1/statuses/user_timeline.json?screen_name={{ds.twitter.screenName}}",
            	"method": "get"
 			}
		}
	},

	"dsMappings" : {
		"twitter" : "ebff6c5df3ae732598d8niktawuzhere"	
	},

	"services" : [
		{
			"service" : "twitter"
		}
	],

	"datasourceConfigModel" : [
		{
			"type" : "select",
			"id" : "ds.twitter.screenName",
			"label" : "Twitter Handle",
			"description" : "Please select your twitter handle.",
			"isRequired" : true
		}
	],
	"queries": [
        {
            "userMessage":"Fetching twitter handle.",
            "connector": {
                "service": "twitter",
                "type": "simple_rest",
                "format": "json",
                "props": {
                    "endpoint_url": "https://api.twitter.com/1.1/statuses/user_timeline.json",
                    "method": "GET"
                }
            },
            "results": [
                {
                    "propId" : "ds.twitter.screenName",
                    "propField" : "options",
                    "labels": "(/user/screen_name)[1]",
                    "values": "(/user/screen_name)[1]"
                }
            ]
        }   
    ]
}