{
	"name" : "Twitter Favourites (@{{ds.twitter.screenName}})",
	"description" : "See the number of times that an account's latest 10 tweets have been favourited, and compare to the previous 10 tweets. Originates from the Gallery.",

	"datasources" : {
		"twitter" : {
			"service" : "twitter",
			"libraryAlias" : "twitter20Recent",
			"name": "@{{ds.twitter.screenName}}'s Twitter Timeline",
			"description" : "The most recent 20 tweets posted by @{{ds.twitter.screenName}}. Originates from the Gallery.",
			"type" : "simple_rest",
			"format" : "json",
			"refreshInterval" : 14400,
			"props" : { 
				"endpoint_url": "https://api.twitter.com/1.1/statuses/user_timeline.json?screen_name={{ds.twitter.screenName}}",
            	"method": "get"
 			}
		}
	},

	"dsMappings" : {
		"twitter" : "ebff6c5df3ae732598d8niktawuzhere"	
	},

	"services" : [
		{
			"service" : "twitter"
		}
	],

	"datasourceConfigModel" : [
		{
			"type" : "select",
			"id" : "ds.twitter.screenName",
			"label" : "Twitter Handle",
			"description" : "Please select your twitter handle.",
			"isRequired" : true
		}
	],
	"queries": [
        {
            "userMessage":"Fetching twitter handle.",
            "errorMessage":"There are two possible reasons: <br><br>1. Your Twitter OAuth token has expired. <a href='http://klipfolio.uservoice.com/knowledgebase/articles/404228-oauth-token-expired' target='_blank'>How do I re-authorize my OAuth token?</a> <br><br>2. Your Twitter login details has changed. Please re-authorize with the new login details.",
            "connector": {
                "service": "twitter",
                "type": "simple_rest",
                "format": "json",
                "props": {
                    "endpoint_url": "https://api.twitter.com/1.1/statuses/user_timeline.json",
                    "method": "GET"
                }
            },
            "results": [
                {
                    "propId" : "ds.twitter.screenName",
                    "propField" : "options",
                    "labels": "(/user/screen_name)[1]",
                    "values": "(/user/screen_name)[1]"
                }
            ]
        }   
    ]
}