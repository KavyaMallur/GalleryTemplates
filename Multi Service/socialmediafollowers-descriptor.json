			"type" : "simple_rest",
			"format" : "json",
			"refreshInterval" : 14400,
			"props" : { 
				"endpoint_url": "https://api.instagram.com/v1/users/self",
				"method": "get"
  			}
		},
        "google_plus" : {
            "service" : "google_plus",
            "type" : "simple_rest",
            "format" : "json",
