			"format" : "xml",
			"refreshInterval" : 14400,
			"props" : {
				 "endpoint_url": "http://api.linkedin.com/v1/companies/{{ds.linkedin.companyId}}/company-statistics",
            	 "method": "get"
			}
		},
		"instagram" : {
			"service" : "instagram",
			"libraryAlias" : "InstagramSelfMetrics",
			"name": "Instagram Account Metrics",
