{
    "name": "Localytics Funnel (Last 30 Days)",
    "description": "Use this Localytics funnel to understand the flow of user activity. Originates from the Gallery.",
    "sampleFormulas": {
        "92a6c869": {
            "txt": "array(\"Item Added to Cart\",\"Begin Checkout\",\"Complete Checkout\")",
            "src": {
                "t": "expr",
                "v": false,
                "c": [{
                    "t": "f",
                    "v": "array",
                    "c": [{
                        "t": "l",
                        "v": "Item Added to Cart"
                    }, {
                        "t": "l",
                        "v": "Begin Checkout"
                    }, {
                        "t": "l",
                        "v": "Complete Checkout"
                    }]
                }]
            }
        },
        "f7609cd1": {
            "txt": "array(\"1492.5\",\"1125\",\"825\")",
            "src": {
                "t": "expr",
                "v": false,
                "c": [{
                    "t": "f",
                    "v": "array",
                    "c": [{
                        "t": "l",
                        "v": "1492.5"
