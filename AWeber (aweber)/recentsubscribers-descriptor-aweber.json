{
    "name" : "AWeber Recent Subscribers",
    "description" : "Monitor the daily number of subscribers to your AWeber list. Originates from the Gallery.",
    

    "datasources" : {
        "aweber" : {
            "service" : "aweber",
            "libraryAlias" : "AWeberRecentSubscribersbyList",
            "name": "AWeber Recent Subscribers by List",
            "description" : "Retrieve a list of the most recent 100 subscribers. Originates from the Gallery.",
            "type" : "simple_rest",
            "format" : "json",
            "refreshInterval" :  14400,                                                      
            "props" : {
                "endpoint_url": "https://api.aweber.com/1.0/accounts/{{ds.aweber.accountID}}/lists/{{ds.aweber.listID}}/subscribers"          
            }
        }
    },

    "dsMappings" : {
        "aweber" : "969880f2869f8c125814doogeraspilk" 
    },

    "services" : [
        {
            "service" : "aweber"
        }
    ],
    "datasourceConfigModel" : [
        {
            "type" : "select",
            "id" : "ds.aweber.accountID",
            "label" : "Account",
            "description":"Select an AWeber Account and its corresponding List.",
            "onChangeQueries" : [ "q2" ]
        },
        {
            "type" : "select",
            "id" : "ds.aweber.listID",
            "label" : "List"
        }
    ],
    "queries": [
        {
            "errorMessage":"From time to time, your AWeber OAuth token will expire. This token allows you to safely bring your data into Klipfolio. <a href='http://klipfolio.uservoice.com/knowledgebase/articles/404228-oauth-token-expired' target='_blank'>Find out how to re-authorize your OAuth tokens</a>.",
            "connector": {
                "service": "aweber",
                "type": "simple_rest",
                "format": "json",
                "props": {
                    "endpoint_url": "https://api.aweber.com/1.0/accounts"
                }
            },
            "results": [
                {
                    "propId" : "ds.aweber.accountID",
                    "propField" : "options",
                    "labels": "/entries/id",
                    "values": "/entries/id"
                }
            ]
        },
        {   
            "id": "q2",
            "connector": {
                "service": "aweber",
                "type": "simple_rest",
                "format": "json",
                "props" : {
                    "endpoint_url": "https://api.aweber.com/1.0/accounts/{{ds.aweber.accountID}}/lists"
                }
            },
            "results": [
                {
                    "propId" : "ds.aweber.listID",
                    "propField" : "options",
                    "labels": "/entries/name",
                    "values": "/entries/id"
                }
            ]
        }
    ]
}